          <li><a href="/allCv" class="nav-link scrollto"><i class="bx bx-file-blank"></i> <span>CVLER</span></a></li>
          <li><a href="/contact" class="nav-link scrollto"><i class="bx bx-envelope"></i> <span>İLETİŞİM</span></a></li>

          
        </ul>
        
      </nav><!-- .nav-menu -->
    </div>
   
  </header><!-- End Header -->

  <main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
      <div class="container">

        <div class="d-flex justify-content-between align-items-center">
          <h2>Bloglarım</h2>
         
        </div>

      </div>
    </section><!-- End Breadcrumbs -->

    <!-- ======= Portfolio Details Section ======= -->
    <section id="myblog" class="myblog">
      <div class="container">

        <div class="row gy-12">

          <div class="col-lg-11">
           
            <div class="container">
              <div class="section-title">
                  <h2>BLOGLARIM </h2>
                  <p> - - -</p>    
              </div>
          
              <div class="row skills-content">
          
                <div class="col-lg-12 pt-12 pt-lg-0 content" data-aos="fade-left">
          
              <% foundBlog.forEach((blog)=>{ %>
                <div class="row">
          
                  <div class="col-lg-3 mx-auto">
                    <img class="img-thumbnail" src="<%=blog.comImage%>" alt="<%= blog.title %> ">
                  </div>
                  <div class="col-lg-8 mx-auto">
                    <div class="post-preview">
                      <a href="/blogs/<%= blog._id %> ">
                        <h2 class="post-title">
                          <%= blog.title %>
                        </h2>
                        <h3 class="post-subtitle">
                          <%= blog.comSentence %>
                        </h3>
                      </a>
                      <p class="post-meta">YAZAR:
                        <a href="#"> <%= blog.byazar %>  </a>
                        <%= blog.date %>
                    </div>
          
                    <hr>
          
          
                  </div>
                  
                  <%if(currentUser){%>
                  <div class="col-lg-1 mx-auto" >
                    
                    <a style="margin-top:20px;" href="/blogs/<%= blog._id %>/edit " class="btn btn-outline-success">DÜZENLE</a>
                    <form  action="/blogs/<%= blog._id %>?_method=DELETE " method="POST">
                      <button style="margin-top:20px;" class="btn btn-outline-danger">SİL</button>
                    </form>
                    </div>
                    <% } %> 
          
          </div>
             <% }); %>     
                <!-- Pager -->
     
            </div>
          </div>
            <hr>
          </div>
</div>
     

        </div>

      </div>
    </section><!-- End Portfolio Details Section -->

  </main><!-- End #main -->

