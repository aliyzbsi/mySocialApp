<html>

<head>


  <title>ANASAYFA</title>
  <meta content="" name="description">
  <meta content="" name="keywords">

  <!-- Favicons -->
  <link href="/assets/img/favicon.png" rel="icon">
  <link href="/assets/img/apple-touch-icon.png" rel="apple-touch-icon">

  <!-- Google Fonts -->
  <link
    href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i"
    rel="stylesheet">

  <!-- Vendor CSS Files -->
  <link href="/assets/vendor/aos/aos.css" rel="stylesheet">
  <link href="/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <link href="/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
  <link href="/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
  <link href="/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
  <link href="/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

  <!-- Template Main CSS File -->
  <link href="/assets/css/style.css" rel="stylesheet">


</head>

<body>

  <div class="right-console d-flex justify-content-end position-absolute">
    <form class="d-flex">

      <% if( !currentUser){ %>
        <button class="btn btn-primary" type="button" onClick="location.href='/signin'">GİRİŞ YAP</button>

        <button class="btn btn-primary" style="margin-left: 5px;" type="button" onClick="location.href='/signup'">KAYIT
          OL</button>
        <% }else { %>

          <% if( currentUser){ %>
            <div class="dropdown">
              <button class="btn btn-primary dropdown-toggle" id="dropdownMenuButton1" data-bs-toggle="dropdown"
                aria-expanded="false" style="margin-left: 5px;" type="button"><i class='bx bx-user-circle'
                  style="font-size: x-large;"></i>
                <%= currentUser.userName %>
              </button>
              <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                <li>
                  <a class=" dropdown-item" href="/myblog"><i class='bx bxs-book'></i></i> BLOGLARIM</a>
                </li>
                <li>
                  <a class=" dropdown-item" href="/myCv"><i class='bx bx-receipt'></i> ÖZGEÇMİŞİM</a>
                </li>
                <li>
                  <a class=" dropdown-item" href="/toDoListe"><i class='bx bxs-plus-circle'></i> YENİ PLAN OLUŞTUR</a>
                </li>
                <li>
                  <a class=" dropdown-item" href="/addnewblog"><i class='bx bxs-file-plus'></i> BLOG EKLE</a>
                </li>


                <li>
                  <a class=" dropdown-item" href="/signout"><i class='bx bxs-user-x'></i> ÇIKIŞ YAP</a>
                </li>

              </ul>
            </div>
            <% } %>

              <% } %>
    </form>
  </div>

  <!-- ======= Mobile nav toggle button ======= -->
  <i class="bi bi-list mobile-nav-toggle d-xl-none"></i>

  <!-- ======= Header ======= -->
  <header id="header">

    <div class="d-flex flex-column">

      <div class="profile">
        <img src="/assets/img/profile-img.jpg" alt="" class="img-fluid rounded-circle">
        <h1 class="text-light"><a href="index.html">ALİ YÜZBAŞI</a></h1>
        <div class="social-links mt-3 text-center">
          <a href="#" class="twitter"><i class="bx bxl-twitter"></i></a>
          <a href="#" class="facebook"><i class="bx bxl-facebook"></i></a>
          <a href="#" class="instagram"><i class="bx bxl-instagram"></i></a>
          <a href="#" class="google-plus"><i class="bx bxl-skype"></i></a>
          <a href="#" class="linkedin"><i class="bx bxl-linkedin"></i></a>


        </div>

      </div>

      <nav id="navbar" class="nav-menu navbar">

        <ul>
          <li><a href="/" class="nav-link scrollto active"><i class="bx bx-home"></i> <span>ANASAYFA</span></a></li>
          <li><a href="/about" class="nav-link scrollto"><i class="bx bx-user"></i> <span>HAKKINDA</span></a></li>

          <li><a href="/allBlog" class="nav-link scrollto"><i class="bx bx-book-content"></i> <span>BLOGLAR</span></a>
          </li>
          <li><a href="/allCv" class="nav-link scrollto"><i class="bx bx-file-blank"></i> <span>CVLER</span></a></li>
          <li><a href="/contact" class="nav-link scrollto"><i class="bx bx-envelope"></i> <span>İLETİŞİM</span></a></li>


        </ul>

      </nav><!-- .nav-menu -->
    </div>

  </header><!-- End Header -->

  <main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
      <div class="container">

        <div class="d-flex justify-content-between align-items-center">
          <h2>Bloglarım</h2>

        </div>

      </div>
    </section><!-- End Breadcrumbs -->


    <section id="myblog" class="myblog">
      <div class="container">

        <div class="row gy-4">

          <div class="col-lg-8">

            <div class="container">
              <div class="section-title">
                <h2>BLOG DÜZENLE </h2>
                <p> - - -</p>
              </div>

              <div class="row skills-content">



                <div class="container" style="margin-top: 7%;">

                  <form>
                    <div class="form-group" style="margin-top: 5%;">
                      <label for="blogTitle">BLOG ADI</label>
                      <input type="text" class="form-control" id="bTitle" placeholder="Blog Adı"
                        value="<%=foundBlog.title%>">
                    </div>
                    <div class="form-group" style="margin-top: 2%;">
                      <label for="comSentence">BLOG BAŞLIĞI</label>
                      <input type="text" class="form-control" id="comSentence" placeholder="Blog Başlığı "
                        value="<%=foundBlog.comSentence%>">
                    </div>
                    <div class="form-group" style="margin-top: 2%;margin-bottom: 4%;">
                      <label for="comImage">BLOG RESMİ</label>
                      <input type="text" class="form-control" id="comImage" placeholder="Blog Resmi Ekleyin "
                        value="<%=foundBlog.comImage%>">
                      <h5>RESİM </h5>
                      <img src="<%=foundBlog.comImage%>" alt="" width="500" height="300">
                    </div>
                    <div class="form-group" style="margin-top: 2%;margin-bottom: 4%;">
                      <label for="byazar">BLOG YAZARI</label>
                      <input type="text" class="form-control" id="byazar" placeholder="Blog Yazarı"
                        value="<%=foundBlog.byazar%>">
                    </div>
                    <textarea name="editor" id="myTextArea" value="<%=foundBlog.blog%>"></textarea>
                    <textarea style="display: none" name="" id="tricky" cols="30"
                      rows="10"><%=foundBlog.blog%></textarea><br>
                    <button id="myButton" onClick="location.href='blog/myblog'" class="btn btn-primary">GÜNCELLE</button>
                  </form>

                </div>

              </div>
            </div>
            <hr>
          </div>



        </div>

      </div>
    </section>





  </main><!-- End #main -->

  <!-- ======= Footer ======= -->
  <footer id="footer">
    <div class="container">
      <div class="copyright">
        &copy; Copyright <strong><span>Ali Yüzbaşı</span></strong>
      </div>
      <div class="credits">
       
        Designed by <a href="https://bootstrapmade.com/">BootstrapMade</a>
      </div>
    </div>
  </footer><!-- End  Footer -->

  <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i
      class="bi bi-arrow-up-short"></i></a>

  <!-- Vendor JS Files -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"
    integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ=="
    crossorigin="anonymous" referrerpolicy="no-referrer"></script>

  <script src="/assets/vendor/aos/aos.js"></script>
  <script src="/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="/assets/vendor/glightbox/js/glightbox.min.js"></script>
  <script src="/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
  <script src="/assets/vendor/php-email-form/validate.js"></script>
  <script src="/assets/vendor/purecounter/purecounter.js"></script>
  <script src="/assets/vendor/swiper/swiper-bundle.min.js"></script>
  <script src="/assets/vendor/typed.js/typed.min.js"></script>
  <script src="/assets/vendor/waypoints/noframework.waypoints.js"></script>

  <!-- Template Main JS File -->
  <script src="/assets/js/main.js"></script>
  <script src="https://cdn.ckeditor.com/4.8.0/standard/ckeditor.js"></script>
  <script>
    CKEDITOR.replace('editor');
  </script>
  <script>
    $(document).ready(function () {

      var blog = $("#tricky").val();
      CKEDITOR.instances.myTextArea.setData(blog);


      $("#myButton").click(function () {
        var title = $("#bTitle").val();
        var comSentence = $("#comSentence").val();
        var comImage = $("#comImage").val();
        var byazar = $("#byazar").val();
        var blog = CKEDITOR.instances.myTextArea.getData();

        var data = {
          title: title,
          comSentence: comSentence,
          comImage: comImage,
          byazar: byazar,
          blog: blog
        }

       
        $.ajax({
          url: '/blogs/<%=foundBlog._id%>',
          type: 'PUT',
          data: data
        });

        window.location = "/";

      });
    });
  </script>
</body>

</html>